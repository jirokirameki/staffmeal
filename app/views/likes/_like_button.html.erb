<% if user_signed_in? %>
  <% if current_user.liking?(post) %>
    <%= form_for(current_user.likes.find_by(post_id: post.id), html: { method: :delete }) do |f| %>
      <%= hidden_field_tag :post_id, post.id %>
      <%= button_tag :type => "submit", :class =>"clear-css" do %>
        <i class="fas fa-heart fa-2x fa-fw color-ed4956"></i>
      <% end %>
    <% end %>
  <% else %>
    <%= form_for(current_user.likes.build) do |f| %>
      <%= hidden_field_tag :post_id, post.id %>
      <%= button_tag :type => "submit", :class =>"clear-css" do %>
        <i class="far fa-heart fa-2x fa-fw"></i>
      <% end %>
    <% end %>
  <% end %>
<% end %>

