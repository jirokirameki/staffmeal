<header>
  <nav class="navbar navbar-default navbar-fixed-top">
    <ul class="wrapper_nav">
      <li style="float: left;"><a href="/"><%= image_tag('title.png', :width => "80px", :height => "20px", :alt => "staffmeal") %></a></li>
      <li style="float: right;">
        <ul class="wrapper_nav_second">
          <li>
            <% if user_signed_in? %>
              <%= link_to user_path(current_user) do %><%= image_tag current_user.image, class: 'user-icon' %><% end %>
            <% else %>
              <%= link_to '無料会員登録 / ログイン', new_user_session_path %>
            <% end %>
          </li>
        </ul>
      </li>
    </ul>
  </nav>
  <% if shop_signed_in? %>
    <ul class="during-login">
      <li><%= link_to shop_path(current_shop) do %><i class="fas fa-pencil-alt fa-fw"></i>&nbsp;マイページ<% end %></li>
      <li><%= link_to 'ログアウト', destroy_shop_session_path, method: :delete %></li>
    </ul>
  <% end %>
</header>