<div style="padding: 10px;">
  <%= render 'shops/header', shop: @shop %>
  
  <%= render 'shops/tab', shop: @shop %>

  <div class="table-responsive" style="margin-top:10px;">
    <table class="table table-striped">
      <tr>
        <th>電話番号</th><td>075-xxx-xxxx</td>
      </tr>
      <tr>
        <th>アクセス</th><td>JR藤森駅から徒歩5分</td>
      </tr>
      <tr>
        <th>営業時間</th><td>平日：11～15時（LO14時）/18～23時（LO22時）<br>土日祝：10～18時（LO17時）</td>
      </tr>      
      <tr>
        <th>定休日</th><td>毎月第3月曜日</td>
      </tr>
      <tr>
        <th>平均予算</th><td>ランチ：1,000円/ディナー：1,500円</td>
      </tr>
       <tr>
        <th>禁煙・喫煙</th><td>分煙</td>
      </tr>
    </table>
  </div>

  <div style='width: 100%;'>
   <div id="map" style='width: 100%; height: 33vh;'></div>
  </div>
  
  <div style='background-color: #dddddd; margin-top:10px; padding:10px;'>
    <p>詳細はこちら！(HPやぐるなび、食べログなどの外部サイトへのリンク設置)</p>
    <p><a href="">http://xxx.xxx.co.jp</a></p>
  </div>
  
  <script type="text/javascript">
    handler = Gmaps.build('Google');
    handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
      markers = handler.addMarkers([
        {
          "lat": 35.658581,
          "lng": 139.745433,
          "picture": {
            "width":  32,
            "height": 32
          },
        }
      ]);
      handler.bounds.extendWith(markers);
      handler.fitMapToBounds();
      handler.getMap().setZoom(15);
    });
  </script>
</div>