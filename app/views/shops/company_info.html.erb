<div class="shop-show">
  <%= render 'shops/header', shop: @shop %>
  
  <%= render 'shops/tab', shop: @shop %>

  <div class="shop-main">
    <p style="color:red">お店情報に含めてしまう？</p>
    <div class="table-responsive">
      <table class="table table-striped">
        <tr>
          <th>会社名</th><td><%= @shop.company_name %></td>
        </tr>
        <tr>
          <th>URL</th><td><%= @shop.url %></td>
        </tr>
        <tr>
          <th>採用担当者</th><td><%= @shop.staff_name %></td>
        </tr>      
        <tr>
          <th>TEL</th><td><%= @shop.tel %></td>
        </tr>
        <tr>
          <th>EMAIL</th><td><%= @shop.email %></td>
        </tr>
         <tr>
          <th>住所</th><td><%= @shop.email %></td>
        </tr>     
      </table>
    </div>
  
    <div style='width: 100%;'>
     <div id="map" style='width: 100%; height: 33vh;'></div>
    </div>
    
    <script type="text/javascript">
      handler = Gmaps.build('Google');
      handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
        markers = handler.addMarkers([
          {
            "lat": 35.658581,
            "lng": 139.745433,
            "picture": {
              "width":  32,
              "height": 32
            },
          }
        ]);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
        handler.getMap().setZoom(15);
      });
    </script>
  </div>
</div>