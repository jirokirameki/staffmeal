<div class="post-header">
  <p class="shop-name"><%= link_to post.shop.shop_name, shop_path(post.shop) %></p>
</div>

<!-- post-img -->
<% if post.image? %>
  <%= image_tag post.image.url, class: 'full-width' %>
<% end %>

<!--post-main-->
<div class="post-main">
  <ul>
    <li id="like-button-<%= post.id%>"><%= render 'likes/like-button', post: post %></li>
    <li><i class="far fa-comment fa-2x fa-fw"></i></li>
    <!--<li class="fas fa-comment fa-2x fa-fw"></li>-->
  </ul>
  <p id="like-count-<%= post.id%>"><%= render 'likes/like-count', post: post %></p>
  
  <!--comment-area-->
  <div class="comment-area">
    <p><span class="name"><%= post.shop.shop_name %></span> <%= post.comment %></p>
    <p class="created_at"><%= post.created_at %></p>
  </div>
</div>